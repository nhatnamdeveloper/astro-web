---
import { Picture } from "node_modules/astro-imagetools/components";
import type { format as Format } from "node_modules/astro-imagetools";

export interface Props {
  src: string;
  alt: string;
  [x: string]: any;
}

const {
  src,
  alt,
  width = 1024,
  aspectRatio = 1 / 1,
  fit = "cover",
  loading = "lazy",
  ...restProps
} = Astro.props;

const format = ["png"] as Format[];
---

<Picture
  src={src}
  alt={alt}
  fit={fit}
  objectFit={fit}
  width={width}
  format={format}
  loading={loading}
  sizes="(max-width: 1024px) 100vw, 1024px"
  {...restProps}
/>
